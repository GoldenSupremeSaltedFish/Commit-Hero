# ===========================================
# Commit Hero 项目编辑器配置
# ===========================================

# 顶级配置文件
root = true

# 所有文件的默认配置
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

# TypeScript 和 JavaScript 文件
[*.{ts,tsx,js,jsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# JSON 文件
[*.json]
indent_style = space
indent_size = 2

# Markdown 文件
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML 文件
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# CSS 和 SCSS 文件
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# HTML 文件
[*.html]
indent_style = space
indent_size = 2

# XML 文件
[*.xml]
indent_style = space
indent_size = 2

# 配置文件
[{package.json,tsconfig.json,vite.config.*,next.config.*}]
indent_style = space
indent_size = 2

# 脚本文件
[*.{sh,bat,ps1}]
end_of_line = lf

# 文档文件
[*.{md,rst,txt}]
trim_trailing_whitespace = false
max_line_length = off

# 二进制文件
[*.{png,jpg,jpeg,gif,ico,woff,woff2,ttf,eot,otf}]
binary = true

# 压缩文件
[*.{zip,tar,gz,rar,7z}]
binary = true
