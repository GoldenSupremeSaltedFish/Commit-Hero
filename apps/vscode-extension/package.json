{
  "name": "commit-hero",
  "displayName": "Commit Hero",
  "description": "开发者效率分析平台 - 追踪代码提交，解锁成就徽章",
  "version": "1.0.0",
  "publisher": "commit-hero",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other",
    "SCM Providers"
  ],
  "keywords": [
    "git",
    "commit",
    "analytics",
    "badges",
    "achievements",
    "productivity"
  ],
  "icon": "resources/icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "activationEvents": [
    "onCommand:commit-hero.startTracking",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commit-hero-view",
          "title": "Commit Hero",
          "icon": "resources/icon.svg"
        }
      ]
    },
    "views": {
      "commit-hero-view": [
        {
          "id": "commit-hero-stats",
          "name": "统计信息",
          "when": "commitHero.isTracking"
        },
        {
          "id": "commit-hero-badges",
          "name": "成就徽章",
          "when": "commitHero.isTracking"
        }
      ]
    },
    "commands": [
      {
        "command": "commit-hero.startTracking",
        "title": "开始追踪",
        "category": "Commit Hero",
        "icon": "$(play)"
      },
      {
        "command": "commit-hero.stopTracking",
        "title": "停止追踪",
        "category": "Commit Hero",
        "icon": "$(stop)"
      },
      {
        "command": "commit-hero.openDashboard",
        "title": "打开仪表板",
        "category": "Commit Hero",
        "icon": "$(dashboard)"
      },
      {
        "command": "commit-hero.showAchievement",
        "title": "显示成就",
        "category": "Commit Hero"
      },
      {
        "command": "commit-hero.refreshStats",
        "title": "刷新统计",
        "category": "Commit Hero",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "commit-hero.startTracking",
          "when": "view == commit-hero-stats && !commitHero.isTracking",
          "group": "navigation"
        },
        {
          "command": "commit-hero.stopTracking",
          "when": "view == commit-hero-stats && commitHero.isTracking",
          "group": "navigation"
        },
        {
          "command": "commit-hero.refreshStats",
          "when": "view == commit-hero-stats",
          "group": "navigation"
        },
        {
          "command": "commit-hero.openDashboard",
          "when": "view == commit-hero-stats",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Commit Hero",
      "properties": {
        "commitHero.apiUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "API 服务器地址"
        },
        "commitHero.userEmail": {
          "type": "string",
          "description": "用户邮箱地址"
        },
        "commitHero.autoTrack": {
          "type": "boolean",
          "default": true,
          "description": "启动时自动开始追踪"
        },
        "commitHero.showNotifications": {
          "type": "boolean",
          "default": true,
          "description": "显示成就通知"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "package": "vsce package",
    "publish": "vsce publish"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "typescript": "^4.9.0",
    "vsce": "^2.0.0"
  },
  "dependencies": {
    "@commit-hero/api-client": "workspace:*"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/commit-hero/vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/commit-hero/vscode-extension/issues"
  },
  "homepage": "https://github.com/commit-hero/vscode-extension#readme",
  "license": "MIT"
}
