{
  "name": "commit-hero",
  "displayName": "Commit Hero",
  "description": "本地 Git 提交追踪器 - 记录你的代码贡献并获得成就徽章",
  "version": "1.0.0",
  "publisher": "commit-hero",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "commits",
    "tracking",
    "achievements",
    "badges",
    "local"
  ],
  "activationEvents": [
    "onStartupFinished",
    "onCommand:commitHero.startTracking",
    "onCommand:commitHero.stopTracking",
    "onCommand:commitHero.showLocalStats",
    "onCommand:commitHero.addMockCommit",
    "onCommand:commitHero.showView",
    "onView:commit-hero-stats"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitHero.startTracking",
        "title": "开始追踪",
        "category": "Commit Hero"
      },
      {
        "command": "commitHero.stopTracking",
        "title": "停止追踪",
        "category": "Commit Hero"
      },
      {
        "command": "commitHero.showLocalStats",
        "title": "显示本地统计",
        "category": "Commit Hero"
      },
      {
        "command": "commitHero.addMockCommit",
        "title": "添加模拟提交",
        "category": "Commit Hero"
      },
      {
        "command": "commitHero.showView",
        "title": "显示 Commit Hero 视图",
        "category": "Commit Hero"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commit-hero-view",
          "title": "Commit Hero",
          "icon": "$(git-commit)",
          "when": "true"
        }
      ]
    },
    "views": {
      "commit-hero-view": [
        {
          "id": "commit-hero-stats",
          "name": "提交统计",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Commit Hero",
      "properties": {
        "commitHero.userEmail": {
          "type": "string",
          "default": "",
          "description": "用于统计的用户邮箱地址"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "build:webview": "cd webview-src && npm install && npm run build",
    "build:standalone": "node scripts/build-standalone.js",
    "download:react": "node scripts/build-standalone.js",
    "dev:webview": "cd webview-src && npm run dev"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "^18.0.0",
    "typescript": "^4.9.4"
  }
}
