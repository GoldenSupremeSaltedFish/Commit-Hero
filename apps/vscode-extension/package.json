{
  "name": "commit-hero",
  "displayName": "Commit Hero",
  "description": "开发者效率分析插件",
  "version": "0.1.0",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:commit-hero.startTracking",
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commit-hero",
          "title": "Commit Hero",
          "icon": "$(trophy)"
        }
      ]
    },
    "views": {
      "commit-hero": [
        {
          "id": "commit-hero-view",
          "name": "开发效率",
          "when": "workspaceHasGit"
        }
      ]
    },
    "commands": [
      {
        "command": "commit-hero.startTracking",
        "title": "开始追踪开发效率",
        "category": "Commit Hero"
      },
      {
        "command": "commit-hero.stopTracking",
        "title": "停止追踪开发效率",
        "category": "Commit Hero"
      },
      {
        "command": "commit-hero.openDashboard",
        "title": "打开 Web 仪表盘",
        "category": "Commit Hero"
      },
      {
        "command": "commit-hero.showAchievement",
        "title": "显示成就",
        "category": "Commit Hero"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "commit-hero.startTracking",
          "when": "workspaceHasGit"
        },
        {
          "command": "commit-hero.stopTracking",
          "when": "workspaceHasGit"
        },
        {
          "command": "commit-hero.openDashboard"
        }
      ],
      "view/title": [
        {
          "command": "commit-hero.openDashboard",
          "when": "view == commit-hero-view",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Commit Hero",
      "properties": {
        "commitHero.apiUrl": {
          "type": "string",
          "default": "http://localhost:3000",
          "description": "Commit Hero Web 服务器地址"
        },
        "commitHero.userEmail": {
          "type": "string",
          "default": "",
          "description": "用户邮箱地址"
        },
        "commitHero.autoTrack": {
          "type": "boolean",
          "default": true,
          "description": "自动追踪 Git 提交"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/node": "^24.3.0",
    "@types/vscode": "^1.103.0",
    "typescript": "^5.9.2"
  }
}
