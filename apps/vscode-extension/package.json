{
  "name": "commit-hero",
  "displayName": "Commit Hero",
  "description": "本地 Git 提交追踪器 - 记录你的代码贡献并获得成就徽章",
  "version": "1.0.0",
  "publisher": "commit-hero",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "git",
    "commits",
    "tracking",
    "achievements",
    "badges",
    "local"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "commitHero.startTracking",
        "title": "开始追踪",
        "category": "Commit Hero"
      },
      {
        "command": "commitHero.stopTracking",
        "title": "停止追踪",
        "category": "Commit Hero"
      },
      {
        "command": "commitHero.openDashboard",
        "title": "打开仪表板",
        "category": "Commit Hero"
      },
      {
        "command": "commitHero.addMockCommit",
        "title": "添加模拟提交",
        "category": "Commit Hero"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "commit-hero-view",
          "title": "Commit Hero",
          "icon": "$(git-commit)"
        }
      ]
    },
    "views": {
      "commit-hero-view": [
        {
          "id": "commit-hero-stats",
          "name": "提交统计",
          "type": "webview"
        }
      ]
    },
    "configuration": {
      "title": "Commit Hero",
      "properties": {
        "commitHero.userEmail": {
          "type": "string",
          "default": "",
          "description": "用于统计的用户邮箱地址"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}
